{
  "name": "aico-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @the-aico/cli dev",
    "build": "pnpm --filter @the-aico/cli build",
    "build:registry": "pnpm --filter @the-aico/cli build:registry",
    "test": "pnpm --filter @the-aico/cli test",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "changeset version",
    "pub:beta": "pnpm --filter @the-aico/cli pub:beta",
    "pub:release": "pnpm --filter @the-aico/cli pub:release",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
